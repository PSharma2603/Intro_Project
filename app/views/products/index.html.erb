<h1>All Products</h1>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Name</th>
      <th>Price</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><img src="<%= product.image_url %>" width="50" alt="<%= product.name %>"></td>
        <td><%= product.name %></td>
        <td>$<%= product.price %></td>
        <td><%= product.category.name if product.category %></td>
        <td><%= link_to "View", product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
