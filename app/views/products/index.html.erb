<h1 class="text-center my-4">All Products</h1>

<!-- Search Form (Simple Search + Category Filtering) -->
<div class="container">
  <%= form_with url: products_path, method: :get, local: true, class: "row g-3 mb-4" do %>
    <div class="col-md-4">
      <label for="query" class="form-label">Search:</label>
      <%= text_field_tag :query, params[:query], placeholder: "Search products...", class: "form-control" %>
    </div>

    <div class="col-md-4">
      <label for="category_id" class="form-label">Category:</label>
      <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :name, params[:category_id]), include_blank: "All Categories", class: "form-select" %>
    </div>

    <div class="col-md-4 align-self-end">
      <%= submit_tag "Search", class: "btn btn-primary w-100" %>
    </div>
  <% end %>
</div>

<!-- Conditional Rendering for No Products -->
<% if @products.any? %>
  <div class="container">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <% if product.image_url.present? %>
              <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>">
            <% else %>
              <img src="https://via.placeholder.com/150" class="card-img-top" alt="No Image Available">
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to product.name, product_path(product), class: "text-decoration-none text-dark" %>
              </h5>
              <p class="card-text text-muted">$<%= product.price %></p>
              <p class="card-text">
                <% if product.category %>
                  <span class="badge bg-secondary">
                    <%= link_to product.category.name, category_path(product.category), class: "text-white text-decoration-none" %>
                  </span>
                <% else %>
                  <span class="badge bg-light text-dark">No Category</span>
                <% end %>
              </p>
              <%= link_to "View", product_path(product), class: "btn btn-primary btn-sm w-100" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination Controls -->
    <div class="d-flex justify-content-center my-4">
      <%= paginate @products, views_prefix: 'kaminari/bootstrap4' %>
    </div>
  </div>
<% else %>
  <div class="container text-center">
    <p class="alert alert-warning">No products available at the moment.</p>
  </div>
<% end %>
